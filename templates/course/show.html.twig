{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course Details</h1>
    <hr>
    <h2>Course name: {{ course.name }}</h2>
    <br>
    <div class="btn-group" role="group">
        <a class="btn btn-primary" href="{{ path('app_course_edit', {'id': course.id}) }}">Edit</a>
        {{ include('course/_delete_form.html.twig') }}
    </div>

    <hr>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Coursework</th>
        </tr>
        </thead>
        <tbody>
        <h2>Courseworks for this Course</h2>
        <br>
        {% for coursework in course.courseworks %}
            <tr>
                <td>{{ coursework.id }}</td>
                <td><a href="{{ path('app_course_work_show', {id: coursework.id }) }}">{{ coursework.name }}</a></td>
            </tr>
        {% else %}
            <p>No Courseworks have been made for this Course yet</p>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a class="btn btn-secondary" href="{{ path('app_course_index') }}">Back to all Courses</a>
{% endblock %}
