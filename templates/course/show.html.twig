{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course name: {{ course.name }}</h1>
    <br>
    <div class="btn-group" role="group">
        <a class="btn btn-primary" href="{{ path('course_edit', {'id': course.id}) }}">Edit</a>
        {{ include('course/_delete_form.html.twig') }}
        <a class="btn btn-secondary" href="{{ path('course_index') }}">Back to all courses</a>
    </div>

    <hr>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Coursework</th>
        </tr>
        </thead>
        <tbody>
        <h2>Courseworks for this Course</h2>
        {% for coursework in course.courseworks %}
            <tr>
                <th scope="row"> {{ coursework.id }}</th>
                <td><a href="{{ path('coursework_show', {id: coursework.id }) }}">{{ coursework.name }}</a></td>
            </tr>
        {% else %}
            <p>No Courseworks have been made for this Course yet</p>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
