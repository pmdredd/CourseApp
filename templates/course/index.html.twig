{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>All Courses</h1>
    <br>
    <a class="btn btn-primary" href="{{ path('course_new') }}">Create Course</a>
    <br>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.name }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-info" href="{{ path('course_show', {'id': course.id}) }}">Details</a>
                        <a class="btn btn-secondary" href="{{ path('course_edit', {'id': course.id}) }}">Edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no Courses found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
