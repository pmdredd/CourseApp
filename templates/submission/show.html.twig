{% extends 'base.html.twig' %}

{% block title %}Submission{% endblock %}

{% block body %}
    <h1>Submissions Details</h1>
    <hr>
    <h2>Student: <a href="{{ path('student_show', {'id': submission.student.id}) }}">{{ submission.student.name }}</a></h2>
    <br>
    <h4>For Course: <a href="{{ path('course_show', {'id': submission.coursework.course.id}) }}">{{ submission.coursework.course.name }}</a></h4>
    <h4>For Coursework: <a href="{{ path('coursework_show', {'id': submission.coursework.id}) }}">{{ submission.coursework.name }}</a></h4>
    <br>
    <p>Hand in Date: {{ submission.handInDate ? submission.handInDate|date('d/m/Y') : '' }}</p>
    <p>Second Submission? {{ submission.secondSubmission ? 'Yes' : 'No' }}</p>
    <p>Mark: {{ submission.mark }}</p>
    <p>Grade: {{ submission.grade }}</p>
    <br>
    <div class="btn-group" role="group">
        <a class="btn btn-primary" href="{{ path('submission_edit', {'id': submission.id}) }}">Edit</a>
        {{ include('submission/_delete_form.html.twig') }}
    </div>
    <a class="btn btn-secondary" href="{{ path('submission_index') }}">Back to all Submissions</a>
    <hr>
{% endblock %}
