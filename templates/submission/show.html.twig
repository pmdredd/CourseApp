{% extends 'base.html.twig' %}

{% block title %}Submission{% endblock %}

{% block body %}
    <h1>Submission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ submission.id }}</td>
            </tr>
            <tr>
                <th>Mark</th>
                <td>{{ submission.mark }}</td>
            </tr>
            <tr>
                <th>HandInDate</th>
                <td>{{ submission.handInDate ? submission.handInDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>SecondSubmission</th>
                <td>{{ submission.secondSubmission ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Grade</th>
                <td>{{ submission.grade }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('submission_index') }}">back to list</a>

    <a href="{{ path('submission_edit', {'id': submission.id}) }}">edit</a>

    {{ include('submission/_delete_form.html.twig') }}
{% endblock %}
