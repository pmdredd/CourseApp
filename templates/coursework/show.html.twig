{% extends 'base.html.twig' %}

{% block title %}Coursework{% endblock %}

{% block body %}
    <h1>Coursework</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coursework.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ coursework.name }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ coursework.deadline ? coursework.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>CreditWeight</th>
                <td>{{ coursework.creditWeight }}</td>
            </tr>
            <tr>
                <th>FeedbackDueDate</th>
                <td>{{ coursework.feedbackDueDate ? coursework.feedbackDueDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('coursework_index') }}">back to list</a>

    <a href="{{ path('coursework_edit', {'id': coursework.id}) }}">edit</a>

    {{ include('coursework/_delete_form.html.twig') }}
{% endblock %}
