<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <h2 class="navbar-brand">CourseApp</h2>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('course_index') }}">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('coursework_index') }}">Courseworks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('student_index') }}">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('submission_index') }}">Submissions</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item" style="margin-right: 10px;">
                        <a class="nav-link" style="color: white; font-size: 20px" href="#">{{ app.user.name }}</a>
                    </li>
                    <li class="nav-item">
                        <a  class="btn btn-light" style="font-size: 20px" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                </ul>
        </nav>
    </header>
    <div class="container-fluid">
        {% block body %}{% endblock %}
    </div>
        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
